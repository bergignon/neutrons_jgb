/gps/particle neutron
/gps/number 1
/gps/pos/centre 0.0 0.0 0.0
/gps/energy 1 MeV
/run/setCutForAGivenParticle proton 1 um

# Debugging 
# /tracking/verbose 3

# Define the zone where the neutrons will be shot
/gps/ang/type iso
/gps/ang/mintheta 178.545001 deg

# For single energy Runs
/run/beamOn 50000

# Runs with different particle energies
#/control/loop loop.mac particleEnergy 1. 10. 0.2

/analysis/write
/analysis/closeFile
